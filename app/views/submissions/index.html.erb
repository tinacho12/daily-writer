<div>
  <div>
    <h1>
      List of all submissions
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new submission
    </h2>

    <form action="/insert_submission" method="post">
      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" rows="3"></textarea>
      </div>

      <div>
        <label for="word_count_box">
          Word count
        </label>

        <input type="text" id="word_count_box" name="query_word_count">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create submission
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Body
        </th>

        <th>
          Word count
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_submissions.each do |a_submission| %>
      <tr>
        <td>
          <%= a_submission.id %>
        </td>

        <td>
          <%= a_submission.body %>
        </td>

        <td>
          <%= a_submission.word_count %>
        </td>

        <td>
          <%= a_submission.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_submission.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_submission.updated_at) %> ago
        </td>

        <td>
          <a href="/submissions/<%= a_submission.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
